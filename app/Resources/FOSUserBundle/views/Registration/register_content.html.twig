{% trans_default_domain 'FOSUserBundle' %}
<div class="row">
    <div class="col-sm-4 col-sm-offset-4">
        <div class="page-title">
            <h1>Inscription</h1>
        </div><!-- /.page-title -->


        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}

        <div class="form-group">
            <label for="login-form-email">E-mail</label>
            {{ form_widget( form.email,{'attr':{ 'class':'form-control'}} ) }}
        </div><!-- /.form-group -->

        <div class="form-group">
            <label for="login-form-first-name">Votre Nom</label>
            {{form_widget(form.username,{"attr":{ "class":"form-control"}})}}
        </div><!-- /.form-group -->

        <div class="form-group">
            <label for="fos_user_registration_form[plainPassword][{{ form.plainPassword.first.vars.name }}]">Votre Mot de passe</label>
            {{form_widget(form.plainPassword.first,{"attr":{"class":"form-control"}})}}
        </div>
        <div class="form-group">
            <label for="fos_user_registration_form[plainPassword][{{ form.plainPassword.second.vars.name }}]">Répétez votre Mot de passe</label>
            {{form_widget(form.plainPassword.second,{"attr":{"class":"form-control"}})}}

        </div>
        <div>
            <button type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-primary pull-right" >Enregistrer</button>
        </div>
        {{ form_end(form) }}


    </div><!-- /.col-sm-4 -->
</div><!-- /.row -->

